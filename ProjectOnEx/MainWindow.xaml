<Window x:Class="ProjectOnEx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectOnEx"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="681"
        MinWidth="450">
    <DockPanel LastChildFill="True">
        <StackPanel x:Name="stackBtn" DockPanel.Dock="Right" Width="200" Margin="10"> 
            <StackPanel x:Name="stackStud">
                <Button x:Name="btnWriteStud" Margin="3" Content="Записать проживающего"/>
                <Button x:Name="btnRemoveStud" Margin="3" Content="Удалить проживающего"/>
            </StackPanel>
            <StackPanel x:Name="stackReport">
                <Button x:Name="btnFormReport" Margin="3" Content="Сформировать отчет"/>
            </StackPanel>
            <Button x:Name="btnStartCheck" Margin="5" Content="Начать проверку"/>
            <Button x:Name="btnSaveEdit" Margin="5" Content="Сохранить изменения"/>
        </StackPanel>
        <DataGrid DockPanel.Dock="Left" Margin="10"></DataGrid>
    </DockPanel>
</Window>
